# Bartending (Tipsy) - Environment Variables
# Copy this file to bartending.env and fill in the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=bartender
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bartending

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=https://tipsy.francony.fr

# ===========================================
# SMTP Configuration (for password reset)
# ===========================================
SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=tipsy@francony.fr
SMTP_PASS=your_email_password_here
SMTP_FROM=tipsy@francony.fr
